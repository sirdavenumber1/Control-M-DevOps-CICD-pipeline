{
	"Defaults": {
		"Application": "${CTM_ENV}BoEtoMoD",
		"SubApplication": "FileTransform",
		"RunAs": "Administrator",
		"Host": "ctm01d"
	},
	"${CTM_ENV}BoEtoMoD": {
		"Type": "SimpleFolder",
		"Comment": "Code reviewed by IMA team",		
		"INIT_PP_PROCESS": {
			"Type": "Job:Command",
			"RunAs": "Administrator",
			"Host": "jobsvr1d",
			"ActionIfFailure" : {
				    "Type": "If",        
				    "CompletionStatus": "60",
						"SetToOKActionName": {
						"Type": "Action:SetToOK"
						}
					},
			"Command": "\"C:\\Program Files\\BMC Software\\scripts\\PS\\Provider_Portal\\CRT_PP_DATA\\CRT_PP_DATA.exe\" ctm01d DEV"
		},
		"SAY_HELLO": {
			"Type": "Job:Command",
			"Command": "echo Hello folks This Control-M environment is ${CTM_ENV}!",
		"Wait1": {
				  "Type": "WaitForEvents",
				  "Events": [
				      {"Event":"e1"}, 
				      {"Event":"e2", "OrderDate":"AnyDate"}, 
				      {"Event":"e3"}
				  ]
			},
		"del1" :
			{
				  "Type": "DeleteEvents",
				  "Events": [
				      {"Event":"e1"},
				      {"Event":"e2", "OrderDate":"AnyDate"},
				      {"Event":"e3"}
				  ]
			},
		"add1" :
			{
				  "Type": "AddEvents",
				  "Events": [
				      {"Event":"d1"}, 
				      {"Event":"d2"}, 
				      {"Event":"d3"}
				  ]
			}
		},
		"PUT_PP_FILE": {
				"Type" : "Job:FileTransfer",
				"ConnectionProfileDualEndpoint" : "QA_GD_GROUP",
				"Host": "jobsvr1d",
				"FileTransfers" :
				[{
					"Src" : "C:\\Partner_Portal\\OUT\\PpTestfile01.txt",
					"Dest" : "/ctm/ctmagent/Inbound/PpTestfile01.txt",
					"TransferType": "Binary",
					"TransferOption": "SrcToDest"
				}]
		},
		"GET_GD_FILE": {
				"Type" : "Job:FileTransfer",
				"ConnectionProfileDualEndpoint" : "QA_GD_GROUP",
				"Host": "jobsvr1d",
				"FileTransfers" :
				[{
					"Dest" : "/ctm/ctmagent/Outbound/GDTestfile01.txt",
					"Src" : "C:\\Partner_Portal\\IN\\GDTestfile01.txt",
					"TransferType": "Binary",
					"TransferOption": "DestToSrc"
				}]
		},
		"END_PP_PROCESS": {
			"Type": "Job:Command",
			"Command": "echo Bye folks!"
		},		
		"Flow": {
			"Type": "Flow",
			"Sequence": ["INIT_PP_PROCESS",
			"SAY_HELLO",
			"PUT_PP_FILE",
			"GET_GD_FILE",
			"END_PP_PROCESS"]
		}
	}
}
